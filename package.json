{
  "name": "mailer",
  "version": "1.0.6",
  "description": "Mailer - Microservice",
  "main": "Build/App.js",
  "types": "Build/App.d.ts",
  "scripts": {
    "fix-lint": "eslint --fix . --ext .ts",
    "lint": "eslint . --ext .ts",
    "check-types": "tsc --noEmit",
    "dev::start": "cross-env ESBUILD_ENV=dev node esbuild.config.js & node wait-and-watch.js",
    "dev::windows": "start cross-env ESBUILD_ENV=dev node esbuild.config.js && start node wait-and-watch.js",
    "dev::migrate": "cross-env NODE_ENV=development node --env-file=./.env Build/App.js migrate",
    "dev::rollback": "cross-env NODE_ENV=development node --env-file=./.env Build/App.js migrate -ra",
    "dev::seed": "cross-env NODE_ENV=development node --env-file=./.env Build/App.js seed",
    "prod::build": "tsc --noEmit && cross-env ESBUILD_ENV=prod node esbuild.config.js",
    "prod::start": "node Build/App.js",
    "prod::migrate": "node Build/App.js migrate",
    "prod::rollback": "node Build/App.js migrate -ra",
    "prod::seed": "node Build/App.js seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Andesite-Lab/Mailer.git"
  },
  "keywords": [
    "andesite",
    "andesite-mailer",
    "mailer"
  ],
  "author": "Ruby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Andesite-Lab/Mailer/issues"
  },
  "homepage": "https://github.com/Andesite-Lab/Mailer#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "esbuild": "^0.19.12",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@basalt-lab/basalt-auth": "^1.0.3",
    "@basalt-lab/basalt-helper": "^1.1.2",
    "@basalt-lab/basalt-logger": "^1.5.1",
    "@basalt-lab/basalt-socket": "^1.4.1",
    "@faker-js/faker": "^8.4.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^8.5.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@types/source-map-support": "^0.5.10",
    "axios": "^1.6.7",
    "class-validator": "^0.14.1",
    "class-validator-jsonschema": "^5.0.0",
    "commander": "^11.1.0",
    "cron": "^3.1.6",
    "cross-env": "^7.0.3",
    "fastify": "^4.26.0",
    "handlebars": "^4.7.8",
    "i18next": "^23.8.2",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "knex": "^3.1.0",
    "nodemailer": "^6.9.9",
    "pg": "^8.11.3",
    "source-map-support": "^0.5.21"
  }
}
